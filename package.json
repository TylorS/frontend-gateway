{
  "name": "@typed/frontend-gateway",
  "version": "0.0.0",
  "description": "Composable Frontend Gateway",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TylorS/frontend-gateway.git"
  },
  "keywords": [
    "Typed",
    "TypeScript",
    "gateway",
    "microfrontends",
    "manager",
    "orchestrator"
  ],
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "license": "Parity-6.0.0",
  "bugs": {
    "url": "https://github.com/TylorS/frontend-gateway/issues"
  },
  "homepage": "https://github.com/TylorS/frontend-gateway#readme",
  "scripts": {
    "clean:cjs": "lerna exec rimraf cjs && tsc --build packages/tsconfig.cjs.json --clean",
    "clean:esm": "lerna exec rimraf esm && tsc --build packages/tsconfig.json --clean",
    "clean:umd": "lerna exec rimraf umd .rpt2_cache",
    "clean": " npm run clean:cjs && npm run clean:esm && npm run clean:umd && lerna exec rimraf node_modules",
    "update:package": "ts-node tools/update-package-json",
    "update:tsconfig": "ts-node tools/update-tsconfig-json",
    "update": "npm run update:package && npm run update:tsconfig && lerna bootstrap",
    "postinstall": "npm run update",
    "build:cjs": "tsc --build packages/tsconfig.cjs.json",
    "build:esm": "tsc --build packages/tsconfig.json",
    "build:umd": "NODE_ENV=production ts-node tools/bundlePackages",
    "build": "npm run build:cjs && npm run build:esm && npm run build:umd",
    "rebuild": "npm run clean && npm run update && npm run build",
    "watch": "npm run build:cjs -- --watch & npm run build:esm -- --watch",
    "lint": "tslint -p tsconfig.json --fix",
    "test": "typed-test && npm run lint",
    "test:ci": "lerna bootstrap && npm run build && npm run test",
    "release": "npm run test:ci && lerna publish --verify-access",
    "release:beta": "npm run release -- --canary --preid beta --dist-tag beta",
    "release:alpha": "npm run release -- --canary --preid alpha --dist-tag alpha"
  },
  "devDependencies": {
    "@typed/test": "9.5.0",
    "@types/node": "12.19.15",
    "@types/yargs": "13.0.11",
    "lerna": "3.22.1",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "rollup": "1.32.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-sourcemaps": "0.6.3",
    "rollup-plugin-terser": "5.3.1",
    "rollup-plugin-typescript2": "0.29.0",
    "terser": "4.8.0",
    "ts-node": "8.10.2",
    "tslib": "1.14.1",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "tslint-no-circular-imports": "0.7.0",
    "tslint-plugin-prettier": "2.3.0",
    "typescript": "3.9.7",
    "yargs": "14.2.3"
  }
}
